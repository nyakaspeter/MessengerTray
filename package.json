{
  "name": "messenger-tray",
  "productName": "MessengerTray",
  "description": "Facebook Messenger on the system tray",
  "version": "0.1.0",
  "main": "src/app.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "menubar": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^9.3.1",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "messenger.tray",
    "win": {
      "target": "portable"
    },
    "portable": {
      "unicode": false,
      "artifactName": "MessengerTray.exe"
    },
    "extraFiles": [
      "./messenger.png",
      "./messenger@2x.png"
    ]
  }
}